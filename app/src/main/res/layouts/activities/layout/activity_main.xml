<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajus.servicenincom.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:background="#fcf2f2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/car"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/car"
                app:civ_border_width="1dp"
                app:civ_border_color="#bf070d"
                android:layout_gravity="center"
                android:onClick="rentCar"
                android:layout_marginRight="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Rent and Transport"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_marginRight="17dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:background="#fcf2f2"
            android:layout_marginLeft="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tour"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tour"
                app:civ_border_width="1dp"
                app:civ_border_color="#bf070d"
                android:layout_gravity="center"
                android:onClick="tourItem"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Tour and Travels"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="10dp"
                android:textAlignment="center"
               />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#fcf2f2"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/event"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/event"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#bf070d"
                    android:layout_gravity="center"
                    android:onClick="eventManage"
                    android:layout_marginRight="15dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Event Management"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginRight="9dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#fcf2f2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/regular"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/regular"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#bf070d"
                    android:layout_gravity="center"
                    android:onClick="regularService"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Regular Services"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#fcf2f2"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/home"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#bf070d"
                    android:layout_gravity="center"
                    android:onClick="home"
                    android:layout_marginRight="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Home and Office Equipments"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#fcf2f2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pack"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/shift"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#bf070d"
                    android:layout_gravity="center"
                    android:onClick="shift"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Pack and Shift"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#fcf2f2"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/food"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/food"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#bf070d"
                    android:layout_gravity="center"
                    android:onClick="supply"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Food Supply"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="#fcf2f2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/it"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/it"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#bf070d"
                    android:layout_gravity="center"
                    android:onClick="itSales"
                    android:layout_marginLeft="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="It sales and Service"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp">
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#fcf2f2">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/business"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/regular"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#bf070d"
                        android:layout_gravity="center"
                        android:onClick="business" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="Business Management"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


</ScrollView>
