<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_rent_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.example.rajus.servicenincom.SendPackage.RentNotification">

    <TextView
        android:id="@+id/setText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#efe7e7"
        android:textSize="18dp"
        android:text="Car Name And Brand"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/service_area"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Destination:  From    to     To"
        android:background="#efe7e7"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint=" Starting Time or Date"
        android:background="#efe7e7"
        android:inputType="datetime"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Name"
        android:background="#efe7e7"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Contact Number"
        android:background="#efe7e7"
        android:inputType="phone"
        android:layout_marginBottom="5dp"
        />
    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Submit"
        android:textColor="#1a1818"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="#1abc9c"
        app:sub_btn_ripple_color="#1abc9c"
        app:sub_btn_tick_color="@color/white"
        android:onClick="Notification"
        android:layout_gravity="right"
        />


</LinearLayout>
