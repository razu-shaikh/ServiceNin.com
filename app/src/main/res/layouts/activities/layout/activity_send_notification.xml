<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_send_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.example.rajus.servicenincom.SendPackage.SendNotification">

    <TextView
        android:id="@+id/restaurantName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#efe7e7"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:hint="Restuarant Name" />
    <TextView
        android:id="@+id/setText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#efe7e7"
        android:textSize="20sp"
        android:hint="Item Name"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Quantity"
        android:background="#efe7e7"
        android:inputType="number"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Location"
        android:background="#efe7e7"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Contact Number"
        android:background="#efe7e7"
        android:inputType="phone"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Delivary time"
        android:background="#efe7e7"
        android:layout_marginBottom="5dp"
        />
    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:text="Submit"
        android:textColor="#252323"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="#1abc9c"
        app:sub_btn_ripple_color="#1abc9c"
        app:sub_btn_tick_color="@color/white"
        android:onClick="Notification"
        />

</LinearLayout>
