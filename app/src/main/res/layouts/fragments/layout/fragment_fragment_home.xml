<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajus.servicenincom.SubActivity.FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="homeFurniture">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/homeap"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Home Appliance And Furniture "
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="medicalEquip">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/medical"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Medical Equipment"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="vehicleTools">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/vehicalt"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Vehicle Tools"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:onClick="officeFurniture">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/officefar"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Office Furniture And Stationary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"/>

        </LinearLayout>



    </LinearLayout>

</ScrollView>
