<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rajus.servicenincom.SubActivity.FragmentShift">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="officeShift">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/office"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Office Shifting"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="homeShift">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/home2"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Home Shifting"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="homeAndOfficeSet">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/farnerture"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Home and Office setup"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#eceaea"
            android:layout_marginTop="13dp"
            android:onClick="industrial">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/industrail"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Industrial Shifting"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333132"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
